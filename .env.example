# Backend Ayarları
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0
DEBUG=True

# Frontend Ayarları
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:8000

# Güvenlik Ayarları
API_KEY=your-secure-api-key-here-change-this-in-production
SECRET_KEY=your-secret-key-for-jwt-tokens-change-this-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting Ayarları
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Scraping Ayarları
MAX_CONCURRENT_SCRAPES=3
REQUEST_TIMEOUT=30
SELENIUM_HEADLESS=True
SELENIUM_IMPLICIT_WAIT=10

# Database Ayarları
DATABASE_URL=sqlite:///./verisnap.db

# SMTP Ayarları
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True
EMAIL_FROM=noreply@verisnap.com

# Log Ayarları
LOG_LEVEL=INFO
LOG_FILE=verisnap.log